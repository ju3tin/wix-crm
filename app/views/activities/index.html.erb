<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_title %></td>
        <td><%= activity.description %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.updated_at %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

